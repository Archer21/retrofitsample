<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/song_item_width_size"
    android:layout_height="@dimen/song_item_height_size"
    android:orientation="vertical"
    android:clickable="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp">

    <ImageView
        android:id="@+id/item_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="left"
        android:background="@color/primary_dark_transparency">

        <TextView
            android:id="@+id/item_song_name"
            android:text="@string/song_item_title"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_artist_name"
            android:text="Haruka Tomatsu"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.CardView>